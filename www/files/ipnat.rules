# $RuOBSD$
#
# Пример настройки NAT.
#   Наружняя сеть:	fxp0	194.226.182.89	255.255.255.240
#   Внутренняя сеть:	rl0	192.168.1.0	255.255.255.0
#

#
# Странслировать адрес 192.168.1.2 внутренней сети в адрес 194.226.182.87.
# Для этого также требуется создать proxy arp entry командой
#   /usr/sbin/arp -s 194.226.182.87 00:90:27:0a:ba:9f pub
# где 00:90:27:0a:ba:9f - ethernet адрес fxp0
#
map fxp0 192.168.1.2/32 -> 194.226.182.87/32 proxy port ftp ftp/tcp
bimap fxp0 192.168.1.2/32 -> 194.226.182.87/32

#
# Странслировать выходящий трафик внутренней в 194.226.182.89 (адрес fxp0).
# Отслеживать и транслировать команды PORT для FTP соединений, выделить
# номера TCP и UDP портов с 10000 по 20000 для трансляции TCP/UDP трафика.
#
map fxp0 192.168.1.0/24 -> 194.226.182.89/32 proxy port ftp ftp/tcp
map fxp0 192.168.1.0/24 -> 194.226.182.89/32 portmap tcp/udp 10000:20000
map fxp0 192.168.1.0/24 -> 194.226.182.89/32
