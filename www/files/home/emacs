;; Руссификация
;;
(set-language-environment "Cyrillic-KOI8")
(set-terminal-coding-system 'koi8-r)
(set-keyboard-coding-system 'koi8-r)

;; Отключение меню
;;
(menu-bar-mode nil)

;; Не создавать backup файлов
;;
(setq auto-save-default nil)
(setq backup-inhibited t)
(setq make-backup-files nil)

;; Не показывать splash screen при загрузке
;;
(setq inhibit-startup-message t)

;; Подсвечивать парные скобки
;;
(show-paren-mode 1)

;; Использовать форматирование в стиле BSD
;;
(setq c-mode-hook (lambda nil (c-set-style "bsd")))

;; Настройки ediff
;;
(setq ediff-diff-options "-a")
(setq ediff-use-last-dir t)
;; Игнорировать пробелы и символы переноса строк при сравнении
;;(setq ediff-ignore-similar-regions t)

;; Настройка горячих клавиш
;;
;; C-n дополняет слово
;;(global-set-key "\C-n" 'dabbrev-expand)
;; C-b перемещает на одно слово назад
;;(global-set-key "\C-b" 'backward-word)
;; C-f перемещает на одно слово назад
;;(global-set-key "\C-f" 'forward-word)
;; C-w удаляет предыдущее слово
;;(global-set-key "\C-w" 'backward-kill-word)
;; C-z отменяет последнее действие
;;(global-set-key "\C-z" 'undo)
;; C-c l переходит на строку с заданным номером
;;(global-set-key "\C-c\l" 'goto-line)
;; C-c C-k удаляет буфер
;;(global-set-key "\C-c\C-k" 'kill-region)
;; Переназначить backspace на удаление предыдущего символа
(setq c-backspace-function (quote backward-delete-char))
;; Вставлять символ табуляции при нажатии Tab
(global-set-key (kbd "TAB") 'self-insert-command)

;; Настройка выделения, копирования и вставки
;;
(transient-mark-mode 1)
;; C-d вырезает
;;(global-set-key "\C-d" 'kill-region)
;; C-y копирует
;;(global-set-key "\C-y" 'copy-region-as-kill)
;; C-p вставляет
;;(global-set-key "\C-p" 'yank)

;; Включить раскраску
;;
(global-font-lock-mode t)

;; Настройки шрифтов
;;
(custom-set-faces
;;	'(font-lock-comment-face ((t (:foreground "cyan"))))
;;	'(font-lock-comment-delimiter-face ((t (:foreground "cyan"))))
;;	'(font-lock-function-name-face ((t (:foreground "white"))))
;;	'(font-lock-keyword-face ((t (:foreground "green"))))
;;	'(font-lock-constant-face ((t (:foreground "white"))))
;;	'(font-lock-builtin-face ((t (:foreground "magenta"))))
;;	'(font-lock-keyword-face ((t (:foreground "yellow"))))
;;	'(isearch-lazy-highlight-face ((t (:background "blue"))))
;;	'(minibuffer-prompt ((t (:foreground "white"))))
;;	'(custom-button-face ((t (:foreground "cyan"))))
;;	'(widget-field-face ((t (:foreground "black"))))
	;; Раскраска diff-файлов
;;	'(diff-added-face ((t (:foreground "cyan"))))
;;	'(diff-removed-face ((t (:foreground "red"))))
;;	'(diff-context-face ((t (:foreground "white"))))
)

;; Прочие настройки
