;; $RuOBSD: emacs,v 1.9 2007/11/27 17:25:29 mkb Exp $
;;

;; Руссификация
;;
(set-language-environment "Cyrillic-KOI8")
(set-terminal-coding-system 'koi8-r)
(set-keyboard-coding-system 'koi8-r)

;; Настройка горячих клавиш
;;
;; C-w удаляет предыдущее слово
;;(global-set-key "\C-w" 'backward-kill-word)
;; C-z отменяет последнее действие
;;(global-set-key "\C-z" 'undo)
;; C-c C-k удаляет буфер
;;(global-set-key "\C-c\C-k" 'kill-region)
;; Переназначить backspace на удаление предыдущего символа
(setq c-backspace-function (quote backward-delete-char))
;; Вставлять символ табуляции при нажатии Tab
(global-set-key (kbd "TAB") 'self-insert-command)

;; Настройка выделения, копирования и вставки
;;
(transient-mark-mode 1)
;; C-d вырезает
;;(global-set-key "\C-d" 'kill-region)
;; C-y копирует
;;(global-set-key "\C-y" 'copy-region-as-kill)
;; C-p вставляет
;;(global-set-key "\C-p" 'yank)

;; Отключение меню
;;
(menu-bar-mode nil)
(tool-bar-mode nil)

;; Включить раскраску
;;
(global-font-lock-mode t)
;; Перекрасить некоторые элементы
;;(set-face-foreground 'font-lock-comment-face "cyan")
;;(if (facep 'font-lock-comment-delimiter-face)
;;	(set-face-foreground 'font-lock-comment-delimiter-face "cyan"))
;;(set-face-foreground 'font-lock-function-name-face "white")
;;(set-face-foreground 'font-lock-keyword-face "green")
;;(set-face-foreground 'font-lock-constant-face "white")
;;(set-face-foreground 'font-lock-builtin-face "magenta")

;; Подсвечивать парные скобки
;;
(show-paren-mode 1)

;; Использовать форматирование в стиле BSD
;;
(setq c-mode-hook (lambda nil (c-set-style "bsd")))

;; Не создавать backup файлов
;;
(setq auto-save-default nil)
(setq backup-inhibited t)
(setq make-backup-files nil)

;; Не показывать splash screen при загрузке (для Emacs 22)
;;
(setq inhibit-splash-screen t)

;; Настройки ediff
;;
(setq ediff-diff-options "-a")
(setq ediff-ignore-similar-regions t)
(setq ediff-use-last-dir t)

;; Прочие настройки
;;
(custom-set-variables)
