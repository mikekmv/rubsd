OS=	$(shell uname)

ifeq "$(OS)" "FreeBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET6
CFLAGS+=-DHAVE_PCAP_FREECODE
INSTALL=install
endif

ifeq "$(OS)" "Linux"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_SNPRINTF -DHAVE_ERR -DHAVE_INITGROUPS
CFLAGS+=-Dth_sport=source -Dth_dport=dest -Duh_sport=source -Duh_dport=dest
CFLAGS+=-DHAVE_INET6 -I/usr/include/pcap
CFLAGS+=-DHAVE_PCAP_FREECODE
INSTALL=install
endif

ifeq "$(OS)" "NetBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET6
INSTALL=install
endif

ifeq "$(OS)" "OpenBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_INET6
CFLAGS+=-DHAVE_PCAP_FREECODE
INSTALL=install
endif

ifeq "$(OS)" "QNX"
CFLAGS+=-D_QNX_SOURCE -DHAVE_INITGROUPS -DHAVE_INET6 -DHAVE_PROGNAME
CFLAGS+=-DHAVE_SNPRINTF -DHAVE_ERR -DHAVE_PCAP_FREECODE
CFLAGS+=-Du_int8_t=_Uint8t -Du_int16_t=_Uint16t
CFLAGS+=-Du_int32_t=_Uint32t -Du_int64_t=_Uint64t
endif

ifeq "$(OS)" "SunOS"
CFLAGS+=-DHAVE_SNPRINTF -DHAVE_INITGROUPS
CFLAGS+=-Du_int8_t=uint8_t -Du_int16_t=uint16_t
CFLAGS+=-Du_int32_t=uint32_t -Du_int64_t=uint64_t
endif
