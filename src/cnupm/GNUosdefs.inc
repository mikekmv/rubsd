# $RuOBSD$

OS=	$(shell uname)

ifeq "$(OS)" "FreeBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
INSTALL=install
endif

ifeq "$(OS)" "Linux"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_SNPRINTF -DHAVE_ERR -DINITGROUPS_NEEDS_GRP_H
CFLAGS+=-Dth_sport=source -Dth_dport=dest -Duh_sport=source -Duh_dport=dest
CFLAGS+=-I/usr/include/pcap
INSTALL=install
endif

ifeq "$(OS)" "NetBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
INSTALL=install
endif

ifeq "$(OS)" "OpenBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
INSTALL=install
endif

ifeq "$(OS)" "QNX"
CFLAGS+=-D_QNX_SOURCE -DINITGROUPS_NEEDS_GRP_H
CFLAGS+=-DHAVE_PROGNAME -DHAVE_SNPRINTF -DHAVE_ERR
CFLAGS+=-Du_int8_t=_Uint8t -Du_int16_t=_Uint16t
CFLAGS+=-Du_int32_t=_Uint32t -Du_int64_t=_Uint64t
endif
