# $RuOBSD$

OS!=	uname

.if ${OS} == "FreeBSD"
COPTS+=	-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
COPTS+=	-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
.endif

.if ${OS} == "Linux"
COPTS+=	-DHAVE_PROGNAME -DHAVE_ERR -DHAVE_SNPRINTF
COPTS+=	-Dth_sport=source -Dth_dport=dest -Duh_sport=source -Duh_dport=dest
.endif

.if ${OS} == "NetBSD"
COPTS+=	-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
COPTS+=	-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
.endif

.if ${OS} == "OpenBSD"
COPTS+=	-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
COPTS+=	-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
.endif
