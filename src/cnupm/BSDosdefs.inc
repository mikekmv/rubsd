OS!=	uname

.if ${OS} == "FreeBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_PCAP_FREECODE
.endif

.if ${OS} == "Linux"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_PCAP_FREECODE
CFLAGS+=-Dth_sport=source -Dth_dport=dest -Duh_sport=source -Duh_dport=dest
.endif

.if ${OS} == "NetBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF
.endif

.if ${OS} == "OpenBSD"
CFLAGS+=-DHAVE_PROGNAME -DHAVE_LOGIN_CAP -DHAVE_SETPROCTITLE
CFLAGS+=-DHAVE_STRLCXX -DHAVE_ERR -DHAVE_SNPRINTF -DHAVE_PCAP_FREECODE
.endif
