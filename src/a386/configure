#! /bin/sh

if test "$*" = ''; then
    host=`./config.guess`
else
    host="$*"
fi

host=`./config.sub $host`

case "$host" in
*-*-linux*)
    ( cd unix/sysdep/linux; ./conf.sh $host )
    dir=unix
    ;;
*--gnu)
    ( cd unix/sysdep/hurd; ./conf.sh $host )
    ;;
*)
    echo $host is not supported
    host=none
    ;;
esac

if test -n "$dir"; then
    printf 'all:\n\t@echo type \\"cd '$dir'\\" first\n' > Makefile
fi

if test "$host" != "none"; then
    echo building for host $host, target $host
fi
